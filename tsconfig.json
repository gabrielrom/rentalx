{
  "compilerOptions": {
    "target": "es5",                                
    "module": "commonjs",                                     
    "baseUrl": "./src",
    "outDir": "./dist",                        
    "paths": {
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"],
      "@configs/*": ["configs/*"],
      "@errors/*": ["errors/*"],
      "@utils/*": ["utils/*"]
    },                                  
    "esModuleInterop": true,                        
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,              
    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}
